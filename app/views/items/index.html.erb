<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Price</th>
    <th>Category</th>
    <th>Quantity Remaining</th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.brand %></td>
    <td><%= item.price %></td>
    <td><%= item.category.name %></td>
    <td><%= item.store.pieces_remaining %></td>
    <td><%= link_to 'Show', item %></td>

    <td><%= button_to 'Add to Cart', {:controller => "carts", :action => "add_to_cart", :item_id => item.id}, :method => :post %></td>

  </tr>
<% end %>
</table>

<br/>
