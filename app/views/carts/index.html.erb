<h1>Listing carts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Quantity</th>
    <th>Total price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @carts.each do |cart| %>
  <tr>
    <td><%= cart.user.firstname %></td>
    <td><%= cart.quantity %></td>
    <td><%= cart.total_price %></td>
    <td><%= link_to 'Show', cart %></td>
    <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
    <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

